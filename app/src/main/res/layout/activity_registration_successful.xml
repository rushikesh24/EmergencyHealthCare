<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.emergencyhealthcare.RegistrationSuccessful">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffff"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/regsec" />

        <customfonts.MyTextView_Lato_Medium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="You are Successfuly Registered"
            android:textSize="20sp"
            android:textStyle="bold" />

        <customfonts.MyTextView_Lato_Light
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Thank you for helping !" />

        <LinearLayout
            android:id="@+id/rsb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:padding="18dp">


            <ImageView
                android:id="@+id/rs_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/fabuser"
                android:tint="#fff" />

            <customfonts.MyTextView_Lato_Regular
                android:id="@+id/rs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Continue to Profile"
                android:textColor="#fff"
                android:textSize="15.3sp" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
